<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="lab1">
        <class>org.austral.ing.lab1.model.user.User</class>
        <class>org.austral.ing.lab1.model.house.House</class>
        <class>org.austral.ing.lab1.model.house.livesIn.LivesIn</class>
        <class>org.austral.ing.lab1.model.inventory.Inventory</class>
        <class>org.austral.ing.lab1.model.inventory.Stock</class>
        <class>org.austral.ing.lab1.model.inventory.product.Product</class>
        <class>org.austral.ing.lab1.model.inventory.product.Category</class>
        <class>org.austral.ing.lab1.model.user.WishList</class>
        <class>org.austral.ing.lab1.model.notification.Notification</class>
        <class>org.austral.ing.lab1.model.notification.HouseInvitation</class>
        <class>org.austral.ing.lab1.model.notification.ChatNotification</class>
        <class>org.austral.ing.lab1.model.notification.HouseInvitation</class>
        <class>org.austral.ing.lab1.model.notification.NearExpiration</class>
        <class>org.austral.ing.lab1.model.chat.Message</class>
        <class>org.austral.ing.lab1.model.chat.Chat</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/xdb;shutdown=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>

</persistence>
